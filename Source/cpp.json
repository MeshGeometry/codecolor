{
	"rules": [
		{
			"name" : "preprocessor",
			"regex" : "\\#(\\w+)",
			"color" : "0.8 0.8 0.8 1"
		},
		{
			"name" : "literal",
			"regex" : "\"(.*?)\"",
			"color" : "0.8 0.8 0.0 1"
		},
		{
			"name" : "keyword",
			"regex" : "\\b(void|return|int|unsigned|float|bool|virtual|class|namespace|using)",
			"color" : "0.2 0.2 0.8 1"
		},
		{
			"name" : "flow",
			"regex" : "\\b(for|while|if|else)",
			"color" : "0.9 0.2 0.2 1"
		},
		{
			"name" : "member",
			"regex" : "([\\w]+)::([\\w]+)",
			"color" : "0.8 0.8 0.8 1"
		},
		{
			"name" : "comment",
			"regex" : "//(.*)",
			"color" : "0.8 0.8 0.8 1"
		}
	]
}